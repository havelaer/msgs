{
  "name": "@havelaer/msgs",
  "version": "0.0.8",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js"
    },
    "./functions": {
      "types": "./dist/functions.d.ts",
      "import": "./dist/functions.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/havelaer/msgs.git"
  },
  "keywords": [
    "messageformat",
    "MessageFormat2",
    "MF2",
    "l10n",
    "localization",
    "react",
    "typescript"
  ],
  "scripts": {
    "check": "biome check .",
    "prepublishOnly": "npm run check && npm run build && npm version patch -m 'chore: publishing version %s'",
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "happy-dom": "^18.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsdown": "^0.15.0",
    "typescript": "~5.7.2",
    "vitest": "^3.2.4"
  },
  "workspaces": [
    ".",
    "playground"
  ],
  "dependencies": {
    "messageformat": "4.0.0-13"
  }
}
